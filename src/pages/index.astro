---
import BaseLayout from "@layouts/BaseLayout.astro";
import LatestPosts from "@components/LatestPosts.astro";
import { getTitle } from "utils/title";
---

<BaseLayout title={getTitle("Home")}>
  <main>
    <div>
      <div class="intro">
        <h1>Albertus Angga Raharja</h1>
        <p>
          👋🏻 Hi! I'm a software engineer from Indonesia who's passionate about
          all things #frontend and #flutter. <p>
            ✍🏻I'm here to write and share about my journey of growth as a
            software engineer.
          </p>
        </p>
        <a href={"/about"}>More about me →</a>
      </div>
      <img src="/images/me.jpg" alt="Albertus" />
    </div>

    <LatestPosts />
  </main>
</BaseLayout>

<style>
  main > div:first-of-type {
    width: 100%;
    min-height: calc(var(--screen-height) * 0.5);
    display: flex;
    gap: 3rem;
    flex-wrap: wrap-reverse;

    /* center the row */
    justify-content: center;
    align-items: center;

    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .intro {
    flex: 1;
    min-width: min(400px, 100%);
  }

  img {
    width: 250px;
    object-fit: contain;
    border-radius: 50%;
    margin: 0 auto;
  }
  p {
    font-size: 1.25rem;
  }
  a {
    color: var(--color-primary);
    font-weight: 600;
  }
</style>
