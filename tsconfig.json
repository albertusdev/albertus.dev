{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@lib/*": ["lib/*"]
    },
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "types": ["node"]
  },
  "include": ["src/*"],
  "exclude": ["node_modules/*", ".astro/*", ".astro/cache/*"]
}
